{
  "name": "capuzzella",
  "version": "1.0.0",
  "description": "AI-Powered Website Builder - Edit websites using natural language",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "bun run src/server.js",
    "dev": "bun --watch run src/server.js",
    "generate:secret": "openssl rand -hex 32",
    "copy:bootstrap": "cp node_modules/bootstrap/dist/css/bootstrap.min.css drafts/assets/css/bootstrap.min.css && cp node_modules/bootstrap/dist/js/bootstrap.bundle.min.js drafts/assets/js/bootstrap.bundle.min.js",
    "docker:start": "docker compose build --no-cache && docker compose up -d"
  },
  "keywords": [
    "website-builder",
    "ai",
    "bun"
  ],
  "author": "Maurice Wipf",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.33.1",
    "elysia": "^1.4.22",
    "openai": "^4.104.0",
    "resend": "^6.9.2"
  },
  "devDependencies": {
    "bootstrap": "^5.3.8"
  }
}