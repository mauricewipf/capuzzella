# Server Configuration
PORT=3000
# NODE_ENV is set by the Dockerfile (production) or defaults to development locally

# Logging: debug | info | warn | error (default: info)
LOG_LEVEL=debug

# Site URL (used for sitemap generation, no trailing slash)
SITE_URL=https://example.com

# Session Secret (generate a secure random string for production)
SESSION_SECRET=change-this-to-a-secure-random-string

# AI Provider Configuration
# Set AI_PROVIDER to 'openai' or 'anthropic'
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# AI Model Configuration
OPENAI_MODEL=gpt-4o
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Resend (Email) Configuration
RESEND_API_KEY=your_api_key_here
CONTACT_EMAIL=admin@yourdomain.com
EMAIL_FROM=Your Name <onboarding@resend.dev>

# Trusted Proxy Configuration
TRUSTED_PROXY=false
